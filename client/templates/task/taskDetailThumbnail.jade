template(name="taskDetailThumbnail")
  .col.taskDetail
    .thumbnails(class="#{colorClass}")
      .right-caption.editPriority 
        |{{group}}
        a(href="#")
          i.fa.fa-eye(style="{{hideIconEdit}}")
      .task-priority {{priorityAlias}}
      .task-buget {{formatedBuget}}
      .task-description {{description}}
      .task-creator {{creatorAlias}}
      .task-cooldown
        +iCooldown(options=cooldownOptions)
      .avatar(style="background-image: url('images/avatars/avatar2.jpg')")
      .full-desc.trash
        a(href="#")
          i.fa.fa-unlock(style="{{hideIconUnlock}}")
          i.fa.fa-lock(style="{{hideIconLock}}")
          i.fa.fa-reply(style="{{hideIconCheck}}")
          i.fa.fa-check(style="{{hideIconCheck}}")
      .media-navigation.task-media
        .media-left
        .media-center: i.fa.fa-play
        .media-right
