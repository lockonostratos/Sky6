template(name="navigation")
  nav(role="navigation").navbar.main.navbar-fixed-top
    .wrapper
      .branding
        span.logo GERA
        //form.navbar-form.navbar-left
        //  input.form-control(type="text" maxlength="30" placeholder="tìm kiếm nhanh")

      ul.nav.navbar-nav.navbar-right.notifications
        li.inav#unreadMessageHandler
          .notification-counts(class="{{messageClass}}") {{unreadMessageCount}}
          span: i.fa.fa-comments
        li.inav
          .notification-counts 3
          span: i.fa.fa-gear
        li.inav#systemNotificationHandler
          .notification-counts 20
          span: i.fa.fa-bomb
        li.inav
          .notification-counts 20
          span: i.fa.fa-gift
        li.inav
          a(href="/sign-out"): i.fa.fa-power-off

      ul.nav.navbar-nav
        li.inav.collapse-toggle: span: i.collapse.fa.fa-th-list
        li.home(class="{{isActiveRoute 'metroHome'}}"): a(href="{{pathFor 'metroHome'}}"): i.fa.fa-home
        li.inav(class="{{isActiveRoute 'taskManager'}}")
          a(href="{{pathFor 'taskManager'}}"): i.fa.fa-clipboard
        li.inav(class="{{isActiveRoute 'warehouse'}}")
          a(href="{{pathFor 'warehouse'}}"): i.fa.fa-cubes
        each routeHistory
          li.inav(class="{{isActiveRoute route}}")
            a(href="{{pathFor route}}"): i.fa(class="{{icon}}")

  +unreadMessagePopover