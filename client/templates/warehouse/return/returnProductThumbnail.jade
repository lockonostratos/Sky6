template(name="returnProductThumbnail")
  .col
    .thumbnails(class="#{styles}")
      .right-caption {{name}}
      .avatar(style="background-image: url('images/missing.jpg')")
      .short-desc.quality {{pad returnQuality}}
      .full-desc.price {{formatNumber finalPrice}} <small>VNĐ</small>
      .discount
        if false
          span.s4 -{{round discountPercent}}<span class="h5">%</span>

      .single-price {{formatNumber price}} VNĐ
      .full-desc.trash: a(href="#"): i.fa.fa-trash-o

