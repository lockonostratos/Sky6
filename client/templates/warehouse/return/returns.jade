template(name="returns")
  #header
    .caption-row: .title Trả Hàng
    .editor-row
      .editor-wrapper(style="width: 200px")
        span.ilabel chọn phiếu bán hàng
        +iSelect(options=saleSelectOptions class="field")
      .editor-wrapper(style="width: 500px")
        span.ilabel.optional chọn hàng trả
        +iSelect(options=returnProductSelectOptions class="field")
      .editor-wrapper(style="width: 100px")
        span.ilabel.optional số lượng trả
        +iSpinEdit(options=returnQualityOptions)
      .editor-wrapper(style="width:100px; {{hideAddReturnDetail}}")
        button.btn.btn-default.addReturnDetail(type='submit') THÊM

  #content
    +iGrid(options=returnDetailOptions)

  #footer
    .editor-row
      .editor-wrapper.right(style="width: 500px")
        span.ilabel ghi chú
        input.comment(value="{{saleReturn.comment}}" )

    .editor-row
      .editor-wrapper.right(style="width:100px; {{hideSubmitReturn}}")
        button.btn.btn-default.submitReturn(type='submit') ĐÃ DUYỆT

      .editor-wrapper.right(style="width:110px; {{hideEditReturn}}")
        button.btn.btn-default.editReturn(type='submit') CHỈNH SỬA

      .editor-wrapper.right(style="width:190px; {{hideFinishReturn}}")
        button.btn.btn-default.finishReturn(type='submit') XÁC NHẬN, CHỜ DUYỆT

      .editor-wrapper.right(style="width: 100px")
        span.ilabel.optional  tỗng tiền
        input.totalPrice(value="{{saleReturn.finallyPrice}}" disabled)
      .editor-wrapper.right(style="width: 180px")
        span.ilabel.center.optional khấu hao
        +iSpinEdit(options=discountCashOptions)
      .editor-wrapper.right(style="width:110px")
        span.ilabel.center giá %
        +iSpinEdit(options=discountPercentOptions)

      .editor-wrapper.right(style="width: 150px")
        span.ilabel.optional  người tạo
        input.totalPrice(value="{{saleReturn.creatorName}}" disabled)

