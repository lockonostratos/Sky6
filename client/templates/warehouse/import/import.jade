template(name="import")
  .app-header
    span.caption Nhập Kho (#{description})
  .app-editor
      .row
         .col.col-md-2
           span.ilabel sản phẩm
           +iSelect(options=productSelectOptions class="field")
         .col.col-md-2
           span.ilabel nhà sản xuất
           +iSelect(options=providerSelectOptions class="field")
         .col.col-auto(style="width:100px")
           span.ilabel số lượng
           +iSpinEdit(options=qualityOptions class="field")
         .col.col-auto(style="width:150px")
           span.ilabel giá nhập
           +iSpinEdit(options=importPriceOptions class="field")
         //.col.col-auto(style="width:150px")
         //  span.ilabel giá bán
         //  +iSpinEdit(options=importPriceOptions class="field")
         .col.col-auto(style="width:100px")
           button.btn.btn-default.addImportDetail(type='submit') Add

  .app-content
    +iGrid(options=importDetailOptions)

  .app-summary(style="height: 50px")
    .row
      .col.col-auto.pull-right(style="width: 100px")
        button.btn.btn-default.pull-right.submitImport(type='submit' style="margin-right: 5px;") XÁC NHẬN
      .col.col-auto.pull-right(style="width: 130px")
        button.btn.btn-default.pull-right.finishImport(type='submit' style="margin-right: 5px;") CHỜ XÁC NHẬN
      .col.col-auto.pull-right(style="width: 120px")
        button.btn.btn-default.pull-right.editImport(type='submit' style="margin-right: 5px;") CHỈNH SỬA
      .col.col-auto.pull-right(style="width: 120px")
        span.ilabel tiền còn nợ
        input.totalPrice(value="#{warehouseImport.debit}" disabled)
      .col.col-auto.pull-right(style="width: 120px")
        span.ilabel tiền đã trả
        input.totalPrice(value="#{warehouseImport.deposit}")
      .col.col-auto.pull-right(style="width: 120px")
        span.ilabel tổng tiền
        input.totalPrice(value="#{warehouseImport.totalPrice}" disabled)
      .col.col-auto.pull-right(style="width: 300px")
        span.ilabel description
        input.description(value="#{warehouseImport.description}" )
      .col.col-auto.pull-right(style="width: 200px")
        span.ilabel người tạo
        input.emailCreator(value="#{warehouseImport.emailCreator}" disabled)


  .app-status
    +iTab(options=tabOptions)