template(name="import")
  #header
    .caption-row
      .title Nhập Kho
    .editor-row
      .editor-wrapper(style="width:250px")
        span.ilabel sản phẩm
        +iSelect(options=productSelectOptions class="field")
      .editor-wrapper(style="width:180px")
        span.ilabel nhà phân phối
        +iSelect(options=providerSelectOptions class="field")
      .editor-wrapper(style="width:120px")
        span.ilabel.center số lượng
        +iSpinEdit(options=qualityOptions class="field")
      .editor-wrapper(style="width:150px")
        span.ilabel.center giá nhập
        +iSpinEdit(options=importPriceOptions class="field")
      .editor-wrapper(style="width:150px; {{hidePrice}}")
        span.ilabel.center giá bán
        +iSpinEdit(options=priceOptions class="field")
      .editor-wrapper(style="width:100px")
        button.btn.btn-default.addImportDetail(type='submit' style="{{hideAddImportDetail}}") Add

  #content
    +iGrid(options=importDetailOptions)

  #footer
    .editor-row
      .editor-wrapper.right(style="width: 100px; {{hideSubmitImport}}")
        button.btn.btn-default.right.submitImport(type='submit' style="margin-right: 5px;") ĐÃ DUYỆT
      .editor-wrapper.right(style="width: 200px; {{hideFinishImport}}")
        button.btn.btn-default.right.finishImport(type='submit' style="margin-right: 5px;") XÁC NHẬN CHỜ DUYỆT
      .editor-wrapper.right(style="width: 120px; {{hideEditImport}}")
        button.btn.btn-default.right.editImport(type='submit' style="margin-right: 5px;") CHỈNH SỬA
      .editor-wrapper.right(style="width: 120px")
        span.ilabel tiền còn nợ
        input.debit(value="#{warehouseImport.debit}" disabled)
      .editor-wrapper.right(style="width: 120px")
        span.ilabel tiền đã trả
        input.deposit(value="#{warehouseImport.deposit}")
      .editor-wrapper.right(style="width: 120px")
        span.ilabel tổng tiền
        input.totalPrice(value="#{warehouseImport.totalPrice}" disabled)
      .editor-wrapper.right(style="width: 300px")
        span.ilabel description
        input.description(value="#{warehouseImport.description}" )
      .editor-wrapper.right(style="width: 180px")
        span.ilabel người tạo
        input.emailCreator(value="#{warehouseImport.emailCreator}" disabled)

    +iTab(options=tabOptions)