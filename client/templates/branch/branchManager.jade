template(name="branchManager")
  .app-header
    span.caption CHI NHÁNH

  .app-editor
    .row
      .col.col-auto
        span.ilabel tên chi nhánh
        input(name="name" maxlength="40")
      .col.col-auto(style="width: 300px")
        span.ilabel.optional địa chỉ
        input(name="address")
      .col.col-auto
        button.btn#createBranch(class="{{allowCreate}}") TẠO MỚI

  .app-content
    +iGrid(options=branchDetailOptions)